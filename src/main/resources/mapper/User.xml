<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mybatis.demo.UserDao">
    <select id="getUserById" parameterType="int" resultType="User"
            useCache="false">
        <![CDATA[

      select t.userId,t.userName from user t where t.userId = #{id}

        ]]>
    </select>

    <select id="queryUsers" parameterType="User" resultType="User"
            useCache="false">
        <![CDATA[
      select * from user t where t.userName = #{userName}
      ]]>
    </select>
    
    <insert id="insertUser" parameterType="User">
        insert into user(userName,age,company) values(#{userName},#{age},#{company})
    </insert>

    <update id="updateUser" parameterType="User">
        update user set userName=#{userName},age=#{age} where userId=#{userId}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from user where userId=#{userId}
    </delete>
</mapper>